{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",           // keep all TS files in src/
    "outDir": "./dist",           // compiled JS goes here

    /* Environment Settings */
    "target": "es2020",           // modern JS output
    "module": "commonjs",         // safest with Sequelize
    "moduleResolution": "node",   // standard Node.js resolution
    "types": ["node"],            // enable Node.js globals

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@queues/*": ["src/queues/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@my_types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@validators/*": ["src/middlewares/validators/*"],
      "@workers/*": ["src/workers/*"]
    },

    /* Other Outputs */
    "sourceMap": true,            // useful for debugging
    "declaration": true,          // generate .d.ts files
    "declarationMap": true,
    "resolveJsonModule": true,    // allow importing JSON files

    /* Stricter Typechecking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Style Options */
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Misc */
    "skipLibCheck": true          // skip checking .d.ts from node_modules
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
