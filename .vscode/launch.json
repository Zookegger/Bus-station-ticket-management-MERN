{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Server (ts-node)",
			"runtimeArgs": [
				"-r",
				"ts-node/register/transpile-only",
				"-r",
				"tsconfig-paths/register"
			],
			"args": ["${workspaceFolder}/server/src/server.ts"],
			"cwd": "${workspaceFolder}/server",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"autoAttachChildProcesses": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Current File",
			"runtimeArgs": ["-r", "ts-node/register"],
			"args": ["${file}"],
			"cwd": "${workspaceFolder}/server",
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal",
			"sourceMaps": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Full Stack (npm run dev)",
			"runtimeArgs": ["npm", "run", "dev"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server Process",
			"port": 9229,
			"restart": true,
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
			"cwd": "${workspaceFolder}/server"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Client Process",
			"port": 9228,
			"restart": true,
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/client/dist/**/*.js"],
			"cwd": "${workspaceFolder}/client"
		}
	],
	"compounds": [
		{
			"name": "Attach to Full Stack (Server + Client)",
			"configurations": ["Attach to Server Process", "Attach to Client Process"]
		}
	]
}
